@model IEnumerable<HerkansingA2D1.Models.AppUser>
@{
    ViewData["Title"] = "Welcome";
}

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .center-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 75vh;
    }

    .index-container {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 30px 20px;
        text-align: center;
        width: 350px;
    }

        .index-container h1 {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .index-container p {
            font-size: 14px;
            color: #555;
            margin-bottom: 20px;
        }

    .user-options {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-top: 20px;
    }

    .user-option-button {
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        text-align: center;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s;
        background-color: lightslategray;
        color: white;
    }

        .user-option-button:hover {
            background-color: darkgray;
        }
</style>

<div class="center-wrapper">
    <div class="index-container">
        <div class="user-options">
            <a asp-controller="AppUsers" asp-action="Create">
                <button class="user-option-button">Register</button>
            </a>
            <a asp-controller="AppUsers" asp-action="Login">
                <button class="user-option-button">Log In</button>
            </a>
        </div>
    </div>
</div>
