@model IEnumerable<HerkansingA2D1.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<style>
    /* All the styling for this page. Wont break (i hope) */
    h1 {
        color: black;
        /* background-color: #ff4500; Red header background */
        font-weight: bold;
        padding: 15px;
        text-align: center;
        margin: 0;
    }

    h5 {
        text-align: center;
        color: black;
        font-weight: bold;
        margin: 20px 0;
    }

    .product-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        padding: 20px;
    }

    .product-card {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 80%;
        max-width: 600px;
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        border: 1px solid #ddd;
    }

        .product-card img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            margin: 10px;
            border-radius: 8px;
        }

        .product-card .placeholder {
            width: 100px;
            height: 100px;
            margin: 10px;
            border-radius: 8px;
            background-color: #ddd;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #aaa;
            font-size: 14px;
            font-weight: bold;
        }

    .product-details {
        flex: 1;
        padding: 10px;
    }

    .product-name {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 5px;
        color: #333;
    }

    .product-description {
        font-size: 14px;
        color: #777;
        margin-bottom: 10px;
    }

    .product-price {
        font-size: 16px;
        font-weight: bold;
        color: black;
        padding-right: 10px;
    }

    .actions {
        text-align: right;
        margin: 10px;
    }

        .actions a {
            text-decoration: none;
            color: darkred;
            margin-right: 10px;
        }

            .actions a:hover {
                text-decoration: underline;
            }

    .create-button {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        color: white;
        background-color: darkgrey;
        border: none;
        border-radius: 5px;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .create-button:hover {
            background-color: slategray;
            color: white;
        }

    .center-button {
        text-align: center;
    }

    .promotion {
        color: limegreen;
    }
</style>

<h1>Menu</h1>
<h5 class="text-outline">Vindt hier de perfecte snacks.</h5>

@if (User.IsInRole("Owner"))
{
    <p class="center-button">
        <a asp-action="Create" class="create-button">Nieuw product</a>
    </p>
}

<div class="product-container">
    @foreach (var product in Model)
    {
        <div class="product-card">
            @if (!string.IsNullOrEmpty(product.ImageUrl))
            {
                <img src="@product.ImageUrl" alt="@product.Name" />
            }
            else
            {
                <div class="placeholder">No Image</div>
            }
            <div class="product-details">
                <div class="product-name">@product.Name</div>
                <div class="product-description">@product.Description</div>
            </div>
            <div class="product-price">
                @if (product.PromotionStart <= DateTime.Now && product.PromotionEnd >= DateTime.Now)
                {
                    <p class="promotion">€@product.PromotionalPrice</p>
                }
                else
                {
                    <p>€@product.Price</p>
                }
            </div>
            @if (User.IsInRole("Owner"))
            {
                <div class="actions">
                    <a asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                    <form asp-action="Delete" asp-route-id="@product.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this product?');" style="display:inline;">
                        <button type="submit" style="background:none;border:none;color:darkred;text-decoration:underline;cursor:pointer;">Delete</button>
                    </form>
                </div>
            }
        </div>
    }
</div>
